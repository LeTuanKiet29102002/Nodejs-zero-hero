    <div class="add-new-user">
      <strong>Delete a user</strong>
      <form class="row g-3" action="/delete-user" method="post">
        
        <div class="col-md-6">
          <label for="inputEmail4" class="form-label"
          >Are you sure to delete this user with Email: </label>
          <input type="email" class="form-control" id="inputEmail4" name="email"
          value="<%= userDelete.email%>"
          />
        </div>
      
        <div class="col-md-6 d-none">
          <label for="inputEmail4" class="form-label d-none"
          >ID</label>
          <input type="text" class="form-control d-none" id="inputEmail4" name="userId"
          value="<%= userDelete.id%>"
          />
        </div>
       
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
      </form>
    </div>
  </div>
